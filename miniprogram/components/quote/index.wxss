.quote-container {
  background-color: rgba(0, 0, 0, 0.1);
  position: relative;
  border-radius: 10px;
  padding: 1em 0.5em;
  margin: 1.5em 0 0.5em 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.quote-container > .mini {
  position: absolute;
  left: 0.5em;
  top: 0;
  transform: translateY(-50%);
}
